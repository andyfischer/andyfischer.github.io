{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "build",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "js/*.ts",
        "components/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "js/Build.ts",
        "js/interfaces.d.ts"
    ],
    "exclude": []
}
